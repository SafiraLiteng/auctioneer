<!DOCTYPE html>
<html>
<head>
	<title>Auctioneer$</title>
	<%= csrf_meta_tags %>
	<%= stylesheet_link_tag    'application', media: 'all' %>
	<%= javascript_include_tag 'application' %>
</head>

<body>
	<section id="banner" class="banner">
		<div class="bg-color">
			<nav class="navbar navbar-default navbar-fixed-top">
				<div class="container">
					<div class="col-md-12">
						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
							<a class="navbar-brand"
							<%= link_to href: 'home_path' do %>
							<%= image_tag 'final_quiz_logo.png' %>
							<% end %>
						</a>

					</div>
					<div class="collapse navbar-collapse navbar-right" id="myNavbar">
						<ul class="nav navbar-nav">
							<li class="active"><%= link_to('Home', home_path) %></li>
							<li class=""><%= link_to 'All Items', items_path %></li>
							<li class="">
								<% if user_signed_in? %>
								<%= link_to 'My Liked Items', user_liked_items_path(current_user) %>
								<% end %>
							</li>
							<li class="">	<%= link_to('Contact Us', contact_url) %></li>
							<li><% if user_signed_in? %>
								<li style="margin-top:16px;">Hello <%= current_user.first_name %>
									<% end %>
								</li>
							</li>
							<li><% if user_signed_in? %>
								<%= link_to 'Sign out', sessions_path, method: :delete %>
								<% else %>
								<li><%= link_to 'Sign in', new_session_path %></li>

								<li><%= link_to 'Sign Up', new_user_path %></li>
								<% end %>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</nav>

		<div class="container">
			<div class="row">
				<div class="banner-info">
					<div class="banner-logo text-center" >
						<h1 style="color: white;"> Auctioneers</h1>
					</div>
				</br>
					<div class="banner-text text-center">
						<h2 class="white">Buy what you need for a better price</p> </h2>
						<h3><p>If you have the best offer you will receive your product at home</p></h3>
						<h3><p>Easy, safe and fun!</p></h3>
						<%= link_to 'New Item', new_item_path, class: "btn btn-primary"%>
						<div class="overlay-detail text-center">
							<a><i class="fa fa-angle-down"></i></a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<%= yield %>

<footer id="footer" >
	<div class="footer-line">
		<div class="container">
			<div class="row">
				<div class="col-md-12 text-center">
					<p><i class="fa fa-envelope-o fa-fw  fa-2x "></i> info@auctioneers.com</p>
				</div>
			</div>
		</div>
	</div>
</footer>
</div>
</body>
</html>
